@* Label, input content, optional helper text, optional tooltip. *@
<div class="form-field">
    <label for="@For" class="form-field__label">
        @Label
        @if (!string.IsNullOrEmpty(Tooltip))
        {
            <span class="form-field__tooltip" title="@Tooltip" aria-label="@Tooltip">â“˜</span>
        }
    </label>
    <div class="form-field__input">
        @ChildContent
    </div>
    @if (!string.IsNullOrEmpty(HelperText))
    {
        <p class="form-field__helper">@HelperText</p>
    }
</div>

@code {
    [Parameter]
    public string Label { get; set; } = string.Empty;

    [Parameter]
    public string? For { get; set; }

    [Parameter]
    public string? HelperText { get; set; }

    [Parameter]
    public string? Tooltip { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
