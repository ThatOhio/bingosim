@if (!string.IsNullOrEmpty(Message))
{
    <div class="alert alert--@Severity.ToString().ToLowerInvariant()" role="alert">
        @Message
    </div>
}

@code {
    [Parameter]
    public string? Message { get; set; }

    [Parameter]
    public AlertSeverity Severity { get; set; } = AlertSeverity.Error;
}
