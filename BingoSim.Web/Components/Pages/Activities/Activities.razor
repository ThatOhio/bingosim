@page "/activities"
@inject IActivityDefinitionService ActivityDefinitionService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Activities Library</PageTitle>

<div class="page-header">
    <h1>Activities Library</h1>
    <a href="/activities/create" class="btn btn-primary">Create Activity</a>
</div>

@if (_loading)
{
    <p>Loading...</p>
}
else if (_activities.Count == 0)
{
    <div class="empty-state">
        <p>No activities found. Create your first activity to get started.</p>
    </div>
}
else
{
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Key</th>
                    <th>Name</th>
                    <th>Mode</th>
                    <th>Attempts</th>
                    <th>Bands</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var activity in _activities)
                {
                    <tr @key="activity.Id">
                        <td>@activity.Key</td>
                        <td>@activity.Name</td>
                        <td>@(activity.ModeSupport.SupportsSolo ? "Solo " : "")@(activity.ModeSupport.SupportsGroup ? "Group" : "")</td>
                        <td>@activity.Attempts.Count</td>
                        <td>@activity.GroupScalingBands.Count</td>
                        <td>@activity.CreatedAt.ToString("g")</td>
                        <td class="actions">
                            <a href="/activities/@activity.Id/edit" class="btn btn-sm btn-secondary">Edit</a>
                            <button type="button" class="btn btn-sm btn-danger" @onclick="() => ShowDeleteConfirmation(activity)">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<DeleteConfirmationModal
    IsVisible="_showDeleteModal"
    Title="Delete Activity"
    Message="@($"Are you sure you want to delete '{_activityToDelete?.Name}'? This action cannot be undone.")"
    OnConfirm="ConfirmDelete"
    OnCancel="CancelDelete" />

@code {
    private List<ActivityDefinitionResponse> _activities = [];
    private bool _loading = true;
    private bool _showDeleteModal;
    private ActivityDefinitionResponse? _activityToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadActivitiesAsync();
    }

    private async Task LoadActivitiesAsync()
    {
        _loading = true;
        try
        {
            var list = await ActivityDefinitionService.GetAllAsync();
            _activities = list.ToList();
        }
        finally
        {
            _loading = false;
        }
    }

    private void ShowDeleteConfirmation(ActivityDefinitionResponse activity)
    {
        _activityToDelete = activity;
        _showDeleteModal = true;
    }

    private async Task ConfirmDelete()
    {
        if (_activityToDelete is not null)
        {
            await ActivityDefinitionService.DeleteAsync(_activityToDelete.Id);
            await LoadActivitiesAsync();
        }
        _showDeleteModal = false;
        _activityToDelete = null;
    }

    private void CancelDelete()
    {
        _showDeleteModal = false;
        _activityToDelete = null;
    }
}
